*, *:before *:after {
box-sizing: border-box;
}

for i in 2..4
	.col-1-{i}
		width ((1/i)*100)%
		float: left

.body-container
	max-width: 900px
	margin auto
	background-color #aaa

.centered
		text-align: center

.vert-center
	vertical-align: center

/*CLEARFIX HACK*/
/*PREVENT ROWS FROM FLOWING INTO EACH OTHER*/
.row:after {
	content: ' ';
	display: table;
	clear: both;
}

.body-pad
	padding 15px
	p
		text-align: left

.nav-container
	width 100%

.nav-list
	list-style-type: none
	border-radius: 5px
	display: inline-block
	overflow hidden
	margin 0
	padding 0
	li
		display: inline-block

.nav-link
	background-color: #666
	text-decoration: none
	color: #fff
	padding 10px 18px
	display block
	&:hover
		background-color: #aaa

@media screen and (max-width: 550px)
	.title-txt
		display inline-block
		float none
	.nav-list
		width 100%
		li
			display block
	.resp-img
		display none

@media screen and (max-width: 300px)
	body 
		font-size: 15px;
